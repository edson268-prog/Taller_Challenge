# ============================================
# ENVIRONMENT
# ============================================
ASPNETCORE_ENV=Docker

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONTAINER_NAME=taller-sql-container
DB_HOST_PORT=1433
DB_CONTAINER_PORT=1433
DB_PASSWORD=INSERT_THE_DB_PASSWORD_HERE
DB_ACCEPT_EULA=Y
DB_EDITION=Express
DB_DATA_VOLUME=sqlserver_data

# ============================================
# ORDERS SERVICE CONFIGURATION
# ============================================
ORDERS_CONTAINER_NAME=taller-api-container
ORDERS_HOST_PORT=5000
ORDERS_CONTAINER_PORT=8080

# ============================================
# PRICING SERVICE CONFIGURATION
# ============================================
PRICING_CONTAINER_NAME=taller-pricing-container
PRICING_HOST_PORT=5050
PRICING_CONTAINER_PORT=8080

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_CONTAINER_NAME=taller-frontend-container
FRONTEND_HOST_PORT=4205
FRONTEND_CONTAINER_PORT=80
FRONTEND_API_URL=http://localhost:5000/api

# ============================================
# DATABASE CONNECTION STRING
# ============================================
DB_CONNECTION_STRING=Server=sqlserver;Database=TallerDB;User Id=sa;Password=${DB_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true